{
    "name": "softwrap-pos",
    "version": "1.0.0",
    "description": "Softwrap POS - Offline Desktop Point of Sale System",
    "main": "src/main/main.js",
    "scripts": {
        "start": "electron . --no-sandbox",
        "dev": "electron . --dev --no-sandbox",
        "web": "node src/web-server/server.js",
        "web:dev": "nodemon src/web-server/server.js",
        "build": "electron-builder",
        "build:linux": "electron-builder --linux",
        "build:win": "electron-builder --win",
        "postinstall": "electron-builder install-app-deps"
    },
    "keywords": [
        "pos",
        "point-of-sale",
        "offline",
        "desktop"
    ],
    "author": "Softwrap",
    "license": "Proprietary",
    "build": {
        "appId": "com.softwrap.pos",
        "productName": "Softwrap POS",
        "directories": {
            "output": "dist"
        },
        "files": [
            "src/**/*",
            "package.json"
        ],
        "linux": {
            "target": [
                {
                    "target": "AppImage",
                    "arch": [
                        "x64"
                    ]
                },
                {
                    "target": "deb",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "category": "Office",
            "icon": "assets/icons/",
            "desktop": {
                "Name": "Softwrap POS",
                "Comment": "Offline Point of Sale System",
                "Keywords": "pos;point-of-sale;retail;sales;",
                "Categories": "Office;Finance;",
                "StartupNotify": "true"
            }
        },
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                },
                {
                    "target": "portable",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "icon": "assets/icons/icon.ico",
            "publisherName": "Softwrap",
            "verifyUpdateCodeSignature": false
        },
        "nsis": {
            "oneClick": false,
            "allowElevation": true,
            "allowToChangeInstallationDirectory": true,
            "installerIcon": "assets/icons/icon.ico",
            "uninstallerIcon": "assets/icons/icon.ico",
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "shortcutName": "Softwrap POS",
            "runAfterFinish": true,
            "license": "LICENSE"
        }
    },
    "dependencies": {
        "archiver": "^6.0.1",
        "bcrypt": "^5.1.1",
        "better-sqlite3": "^9.2.2",
        "escpos": "^3.0.0-alpha.6",
        "escpos-usb": "^3.0.0-alpha.4",
        "express": "^4.21.2",
        "express-session": "^1.18.2",
        "extract-zip": "^2.0.1",
        "pdfkit": "^0.14.0",
        "uuid": "^9.0.1"
    },
    "devDependencies": {
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1"
    }
}
